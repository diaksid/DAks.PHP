<section class="carousel slide"
         data-ride='carousel'
         data-interval='10000'
         data-pause
>
    <style>
        .carousel-item .icon {
            display: block;
            color: #777;
            font-size: 30vmin;
        }

        .carousel-item .icon-__logo {
            color: #555;
            font-size: 15vmin;
        }

        .carousel__more {
            position: absolute;
            right: 2rem;
            bottom: 4rem;
        }

        .carousel__more .icon {
            display: block;
            font-size: 2rem;
        }
    </style>

    {% set n = 3 %}

    <ol class="carousel-indicators">
        {% for i in 0..n %}
            <li data-target=".carousel"
                data-slide-to="{{ i }}"
                    {{ i == 0 ? 'class="active"' : '' }}
            ></li>
        {% endfor %}
    </ol>

    <div class="carousel-inner">
        {% set k = ['__logo', 'apps', 'security', 'important_devices'] %}
        {% for i in 0..n %}
            <div class="carousel-item{{ i == 0 ? ' active' : '' }}">
                {# <div class="lazyload"
                     data-carousel-lazy="https://picsum.photos/600/450?image={{ random(1..99) }}"></div> #}
                <div class="p-5">
                    {{ icon(k[i] ~ ' wow zoomIn', {'data-wow-delay': '.5s'}) }}
                </div>
            </div>
        {% endfor %}
        <div class="carousel__more wow zoomIn"
             data-wow-delay=".5s"
        >
            {% for i in 0..2 %}
                {{ icon('expand_more wow fadeOutDown infinite', {'data-wow-delay': (1.5 + 0.25 * i) ~ 's'}) }}
            {% endfor %}
        </div>
    </div>

    <a class="carousel-control-prev"
       role="button"
       href=".carousel"
       data-slide="prev"
    >
    <span class="carousel-control-prev-icon"
          aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next"
       role="button"
       href=".carousel"
       data-slide="next"
    >
    <span class="carousel-control-next-icon"
          aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</section>
